			<list_editor name="list">
				<datasource>.rollTypes</datasource>
				<class>rr_staged_entry_editor_rollType</class>
				
				<script>
					function addEntry(bFocus)
						local n = getWindowCount();

						local w = createWindow();
						if w then
							w.selected.setValue(1);
						
							if bFocus then
								w.type.setFocus();
							end
						end
						
						return w;
					end
				</script>
